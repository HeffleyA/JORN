<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:JORN"
             x:Class="JORN.MainPage"
             x:DataType="local:ChatModel">

    <Grid>
        <Label x:Name="jornLabel"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               WidthRequest="500"
               Text="JORN Chat"
               TextDecorations="Underline"
               FontFamily="Insomnia"
               FontSize="Large"
               TextColor="Red"
               FontAttributes="Italic,Bold"
               HorizontalTextAlignment="Center"/>

        <Image x:Name="jorn"
               Aspect="AspectFill"
               Opacity="0.3" />

        <ScrollView HorizontalOptions="Center"
                    VerticalOptions="Center">
            <StackLayout>
                <BoxView Color="Aqua"
                         HeightRequest="96"
                         WidthRequest="96"/>
            </StackLayout>
        </ScrollView>

        <Entry x:Name="jornInput"
               Placeholder="Enter your message or question for JORN"
               WidthRequest="300"
               HorizontalOptions="Fill"
               VerticalOptions="End"/>
    </Grid>

</ContentPage>
